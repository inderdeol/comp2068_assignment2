extends layout

block content
  h1= title
  .jumbotron
    h1.text-center Advertise Hub

  .row  
    .col-sm-9
      ul
        each a in ad
          .row 
            .col-sm-8
              h3 #{a.item}
            
          .row
            .col-sm-2
              p Description: #{a.description}
            .col-sm-2 
              p Price: #{a.price} 
            .col-sm-2 
              p Condition: #{a.condition}
            .col-sm-2
              a(href='/update/'+a.id).btn.btn-warning Update
            .col-sm-2
              form.delete(id=a.id)
                button(type='submit').btn.btn-danger Delete
    .col-sm-2
        img.img-rounded(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT8VZzu17awY-uLsCPs0jeQFlgrR3BN5PacsQ&usqp=CAU' alt='Cinque Terre' width='100%' height='100%')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
  script(src='/javascripts/remove.js')   

