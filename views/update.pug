extends layout

block content
    br
    p.display-4.text-center.text-secondary.bg-light Update item to Advertise portal for reselling it.
    form(method='POST' action='/update')
        .form-group
            label(for='item') Name of the Item:
            input#username.form-control(type='text' placeholder='Enter Item Name' name='item')
        .form-group
            label(for='description') Description:
            input#password.form-control(type='text' placeholder='Enter description' name='description')
        .form-group
            label(for='price') Price:
            input#password.form-control(type='text' placeholder='Price of the product' name='price')
        .form-group
            label(for='condition') Condition:
            input#password.form-control(type='text' placeholder='Condition of the product' name='condition')
        input(type='hidden' name='id' value=ad.id)

        input(type='submit' value='Update').btn.btn-info
        